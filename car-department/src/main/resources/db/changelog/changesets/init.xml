<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet id="1" author="xaghoul">

        <createTable tableName="department">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_department"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="description" type="VARCHAR(255)"/>
            <column name="department_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="employee">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_employee"/>
            </column>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="birthday" type="DATE"/>
            <column name="address" type="VARCHAR(255)"/>
            <column name="phone_number" type="VARCHAR(255)"/>
            <column name="department_id" type="BIGINT"/>
            <column name="employee_id" type="BIGINT"/>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="department_id"
                                 baseTableName="employee"
                                 constraintName="FK_EMPLOYEE_ON_DEPARTMENT"
                                 referencedColumnNames="id"
                                 referencedTableName="department"/>
        <addForeignKeyConstraint baseColumnNames="employee_id"
                                 baseTableName="employee"
                                 constraintName="FK_EMPLOYEE_ON_EMPLOYEE"
                                 referencedColumnNames="id"
                                 referencedTableName="department"/>

        <createTable tableName="color">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_color"/>
            </column>
            <column name="color_name" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="car">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_car"/>
            </column>
            <column name="manufacturer" type="VARCHAR(255)"/>
            <column name="model" type="VARCHAR(255)"/>
            <column name="vin_number" type="VARCHAR(255)"/>
            <column name="employee_id" type="BIGINT"/>
            <column name="color_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="car_id" type="BIGINT"/>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="car_id"
                                 baseTableName="car"
                                 constraintName="FK_CAR_ON_CAR"
                                 referencedColumnNames="id"
                                 referencedTableName="employee"/>
        <addForeignKeyConstraint baseColumnNames="color_id"
                                 baseTableName="car"
                                 constraintName="FK_CAR_ON_COLOR"
                                 referencedColumnNames="id"
                                 referencedTableName="color"/>
        <addForeignKeyConstraint baseColumnNames="employee_id"
                                 baseTableName="car"
                                 constraintName="FK_CAR_ON_EMPLOYEE"
                                 referencedColumnNames="id"
                                 referencedTableName="employee"/>

    </changeSet>
</databaseChangeLog>
